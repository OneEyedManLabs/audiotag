<?xml version="1.0" encoding="utf-8"?>
<!--
   AudioTag data extraction rules for Android 12+
   Conservative backup: essential app data only
-->
<data-extraction-rules>
    <cloud-backup>
        <!-- Include app preferences/settings -->
        <include domain="sharedpref" path="."/>
        
        <!-- Include database files -->
        <include domain="database" path="."/>
        
        <!-- Exclude external files - use manual export for audio -->
        <exclude domain="external" path="."/>
    </cloud-backup>
    
    <!-- Device-to-device transfer: include database and settings only -->
    <device-transfer>
        <include domain="sharedpref" path="."/>
        <include domain="database" path="."/>
        <exclude domain="external" path="."/>
    </device-transfer>
</data-extraction-rules>