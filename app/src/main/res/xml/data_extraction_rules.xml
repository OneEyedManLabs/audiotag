<?xml version="1.0" encoding="utf-8"?>
<!--
   AudioTagger data extraction rules for Android 12+
   Smart backup: includes database, settings, and small audio files only
-->
<data-extraction-rules>
    <cloud-backup>
        <!-- Include app preferences/settings -->
        <include domain="sharedpref" path="."/>
        
        <!-- Include database files -->
        <include domain="database" path="."/>
        
        <!-- Include small audio files only -->
        <include domain="file" path="audio_small/"/>
        
        <!-- Exclude large audio files -->
        <exclude domain="file" path="audio_large/"/>
        
        <!-- Exclude temporary and cache files -->
        <exclude domain="file" path="temp/"/>
        <exclude domain="cache" path="."/>
    </cloud-backup>
    
    <!-- Device-to-device transfer can include everything -->
    <device-transfer>
        <include domain="sharedpref" path="."/>
        <include domain="database" path="."/>
        <include domain="file" path="."/>
        <exclude domain="cache" path="."/>
    </device-transfer>
</data-extraction-rules>